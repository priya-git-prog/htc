<style type="text/css">
  table, th, td {
    border: 1px solid black;
  }

  th, td {
    padding: 15px;
  }
</style>


<h1>Tickets</h1>

<table style="margin-left: auto; margin-right: auto;">
  <thead>
    <tr>
      <th>D/O Booking</th>
      <th>D/O Journey</th>
      <th>Passenger name</th>
      <th>From</th>
      <th>To</th>
      <th>Class</th>
      <th>Amount</th>
      <th>Company</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.dob%></td>
        <td><%= ticket.doj%></td>
        <td><%= ticket.passenger_name %></td>
        <td><%= ticket.from %></td>
        <td><%= ticket.to %></td>
        <td><%= ticket.travel_class %></td>
        <td><%= ticket.amount %></td>
        <td><%= link_to ticket.company.formatted_name , company_path(ticket.company) %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @tickets %>
<br>

<%= link_to 'New Ticket', new_ticket_path %>
